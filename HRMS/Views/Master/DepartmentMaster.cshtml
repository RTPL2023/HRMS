    <script type="text/javascript">

        $(document).ready(function () {
            ShowTable();
         });

        function cleartextbox() {

            $('#department').val("");

            $('#editdepartment').val("");
            $('#editid').val("");


        }
        function btnsubmitOnclick() {

             if ($('#department').val() == null || $('#department').val() == "") {
                alert("department id Required");
                $('#department').focus();
             }
             else {
                    let ModelObject = {

                        department: $('#department').val(),

                    };

                    $.ajax({
                        url: '@Url.Action("Savedepartment", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            $("#myToast").toast({
                                delay: 5000
                            });
                            $("#myToast").toast("show");
                            document.getElementById('tostmsg').innerHTML =
                                data;
                            cleartextbox();
                            $("#Department").modal('hide');
                            ShowTable();
                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                    });
            }
        }
        function btnEditOnclick(decid) {
                    let ModelObject = {
                        id: decid
                    };
                    $.ajax({
                        url: '@Url.Action("getdepartmentByid", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                           /* console.log(data);*/
                            $('#editdepartment').val(data.department);

                            $('#editid').val(data.id);

                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                    });

        }
        function btnEditDepartmentOnclick() {
                    let ModelObject = {
                        editdepartment:$('#editdepartment').val(),

                        editid:$('#editid').val(),
                    };
                    $.ajax({
                        url: '@Url.Action("editDepartmentByid", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            $("#Departmentedit").modal('hide');
                            $("#myToast").toast({
                                delay: 5000
                            });
                            $("#myToast").toast("show");
                            document.getElementById('tostmsg').innerHTML =
                                data;
                            cleartextbox();
                            ShowTable();

                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                    });

        } function btnDeleteOnclick() {
                    let ModelObject = {
                        editdepartment:$('#editdepartment').val(),

                        editid:$('#editid').val(),
                    };
                    $.ajax({
                        url: '@Url.Action("deleteDepartmentByid", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            $("#DepartmentDelete").modal('hide');
                            $("#myToast").toast({
                                delay: 5000
                            });
                            $("#myToast").toast("show");
                            document.getElementById('tostmsg').innerHTML =
                                data;
                            cleartextbox();
                            ShowTable();

                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                    });

        }
        function ShowTable() {
            let ModelObject = {  name: $('#name').val()};
                    $.ajax({
                        type: "POST",
                         url: '@Url.Action("getDepartmentMasterList", "Master")',
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            document.getElementById("list").innerHTML = data;

                    },
                     error: function (err) {
                    //alert("Error Occured");
                     }
                    });
        }






    </script>
}